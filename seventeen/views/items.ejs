<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SEVENTEEN - Event List</title>
    <link rel="stylesheet" href="/public/css/style.css" />
  </head>
  <body>
    <header class="header">
      <div class="container">
        <p class="logo">SEVENTEEN OFFICIAL</p>
        <h1>Event List</h1>
        <p class="subtitle">Upcoming events and activities</p>
      </div>
    </header>

    <main class="container">
      <div class="header-action">
        <a href="/items/create" class="btn-create">+ Create New Event</a>
      </div>

      <div class="events-grid">
        <% data.forEach(function(item, index){ %>
        <div class="event-card">
          <div>
            <div class="card-badge"><%= item.category %></div>
            <h2 class="card-title"><%= item.title %></h2>

            <div class="card-info">
              <div class="info-item">
                <span class="icon">üìÖ</span>
                <span><%= item.date %></span>
              </div>
              <div class="info-item">
                <span class="icon">üìç</span>
                <span><%= item.location %></span>
              </div>
            </div>
          </div>

          <a href="/items/<%= index %>" class="card-link">View Details ‚Üí</a>
        </div>
        <% }) %>
      </div>
    </main>
  </body>
</html>
